<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.riddlequiz.Ques">

    <LinearLayout
        android:id="@+id/activity_ques"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:textSize="28sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="If 1=2, 2=5, 3=10,4=17, 5=?? "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:id="@+id/edittext1"
            android:onClick="one"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lock the Ans"
            android:onClick="four"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 2"
            android:textSize="28sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="If 1=2, 2=6, 3=12,4=20, 5=?? "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:id="@+id/edittext2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lock the Ans"
            android:onClick="two"/>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 3"
            android:textSize="28sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="If 1=2, 2=9, 3=28, 4= 65,5=??? "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:id="@+id/edittext3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lock the Ans"
            android:onClick="three"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 4"
            android:textSize="28sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="Complete the series:0,3,8,15,?"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:id="@+id/edittext4"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lock the Ans"
            android:onClick="four"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 5"
            android:textSize="28sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="Complete the series:2,3,7,16,??"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:id="@+id/edittext5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lock the Ans"
            android:onClick="five"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SUBMIT"
            android:onClick="result"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result"/>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/counter"
            android:textSize="16sp"
            />
    </LinearLayout>
</ScrollView>